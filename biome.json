{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": ["src/components/ui/*"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "bracketSpacing": true,
    "indentWidth": 2,
    "lineEnding": "lf",
    "useEditorconfig": true,
    "lineWidth": 120
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": false,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "quoteProperties": "asNeeded",
      "jsxQuoteStyle": "single"
    }
  },
  "css": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "assists": {
    "enabled": true,
    "actions": {
      "source": {
        "sortJsxProps": "on",
        "useSortedKeys": "on"
      }
    }
  }
}
